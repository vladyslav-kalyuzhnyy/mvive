<% content_for(:title, "Шопінг. Кращі магазини та шоу-руми одягу")%>
<% content_for(:description, "Де купувати дизайнерський одяг ? Новини тільки кращих магазинів та шоу-румів у Львові та України.") %>
<% content_for(:keywords, "шоппинг, мода, luxury, каталог магазинов")%>
<% content_for(:og_title, "Шопінг. Кращі магазини та шоу-руми одягу")%>
<% content_for(:og_description, "Де купувати дизайнерський одяг ? Новини тільки кращих магазинів та шоу-румів у Львові та України.")%>
<% content_for(:og_url, "http://mvive.net/shoppingandmakeup")%>

<div class="global-scope">
  <div class="settings-scope" style="padding-top: 0;">
    <div class="up-logo-main">
      <%= image_tag "mvive-tv-white-small.png", alt: "MVive Fashion Channel", class: "up-logo" %>
    </div>
    <%= render "shared/main_news_navbar" %>
    <h2 class="shoppingandmakeup-h2">Shopping</h2>
    <div class="google-ads-news-main">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- mv-news-main -->
      <ins class="adsbygoogle"
           style="display:inline-block;width:728px;height:90px"
           data-ad-client="ca-pub-3562964519569523"
           data-ad-slot="1356928495"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
    <div class="news-feed">

      <% @shoppingandmakeup.each do |shoppingandmakeup| %>
          <div class="news-container-shoppingandmakeup">

            <h1><span class="headline-word"><%= shoppingandmakeup.name %></span></h1>



            <a href=" <%= shoppingandmakeup_path(shoppingandmakeup) %>" target="_self">
              <div class="news-photo-shoppingandmakeup" style="background-image: url(<%= shoppingandmakeup.image %>);" >
                <div class="news-date-block-shoppingandmakeup">
                  <p class="news-date-address-shoppingandmakeup"><%= shoppingandmakeup.address %></p>
                  <p class="news-date-phone-shoppingandmakeup"><%= shoppingandmakeup.phone %></p>
                </div>
              </div>
            </a>

            <!--<div class="news-content">
              <p><%= shoppingandmakeup.short %></p>
            </div>-->
          </div>
      <% end %>
    </div>

    <%= link_to '<p class="add-new-callback">Написати в редакцію MVive</p>'.html_safe, contact_us_path, target: "_self" %>

    <div class="casting-next-back-btns">
      <%= will_paginate @shoppingandmakeup, previous_label: "Назад", next_label: "Вперед" %>
    </div>

    <div class="google-ads-news-main">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- mv-news-main -->
      <ins class="adsbygoogle"
           style="display:inline-block;width:728px;height:90px"
           data-ad-client="ca-pub-3562964519569523"
           data-ad-slot="1356928495"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
  </div>
</div>
</div>
<%= render 'shared/footer' %>