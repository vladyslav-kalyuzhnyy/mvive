<% content_for(:title, "Эксклюзивные новости мира моды | Мода")%>
<% content_for(:description, "Эксклюзивные новости моды от MVive. Интервью с модельерами, топовыми моделями и лучшими мастерами мейкапа и многое другое!") %>
<% content_for(:keywords, "эксклюзивные новости моды, мода 2016")%>

<%= render "shared/menu" %>
<div class="global-scope">
  <div class="settings-scope" style="padding-top: 0;">
    <%= render "shared/main_news_navbar" %>
    <h2 class="events-h2">Модные события</h2>
    <div class="google-ads-news-main">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- mv-news-main -->
      <ins class="adsbygoogle"
           style="display:inline-block;width:728px;height:90px"
           data-ad-client="ca-pub-3562964519569523"
           data-ad-slot="1356928495"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
    <div class="news-feed">

      <% @event.each do |event| %>
          <div class="news-container">

            <h1><span class="headline-word"><%= event.name %></span></h1>



            <a href="<%= event_path(event) %>" target="_self">
              <div class="news-photo-shoppingandmakeup" style="background-image: url(<%= event.image %>);" >
                <div class="news-date-block-events">
                  <p class="news-date-day-events"><%= event.events_day %></p>
                  <p class="news-date-month-events"><%= event.events_month %></p>
                  <p class="news-date-adress-events"><%= event.events_adress %></p>
                </div>
              </div>
            </a>

            <div class="news-content">
              <p><%= event.short %></p>
            </div>

          </div>
      <% end %>
    </div>

    <div class="casting-next-back-btns">
      <%= will_paginate @event, previous_label: "Назад", next_label: "Вперед" %>
    </div>

    <div class="google-ads-news-main">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- mv-news-main -->
      <ins class="adsbygoogle"
           style="display:inline-block;width:728px;height:90px"
           data-ad-client="ca-pub-3562964519569523"
           data-ad-slot="1356928495"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>

    <h3 class="social-call">Мы в социальных сетях</h3>
    <div class="social-footer">
      <ul>
        <li><a href="https://vk.com/mvivenet"><i class="fa fa-vk"></i></a></li>
        <li><a href="https://www.facebook.com/mvivenet"><i class="fa fa-facebook"></i></a></li>
        <li><a href="https://www.instagram.com/mvivenet/"><i class="fa fa-instagram"></i></a></li>
      </ul>
    </div>
  </div>
</div>
</div>
<%= render 'shared/footer' %>