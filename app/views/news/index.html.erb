<% content_for(:title, "Новости моды 2016-2017 | Мода")%>
<% content_for(:description, "Только актуальные новости в мире высокой моды: тренды, выходы новых коллекций, интересные факты из жизни модельеров и другое !") %>
<%= render "shared/menu" %>
<div class="global-scope">
  <div class="settings-scope" style="padding-top: 0;">
    <%= render "shared/news_slider_navbar" %>
    <h2>Последние обновления</h2>
    <div class="news-feed">

      <% @news.each do |news| %>
      <div class="news-container">

        <h1><span class="headline-word"><%= news.name %></span></h1>



        <a href=" <%= news_path(news) %>" target="_self">
          <div class="news-photo" style="background-image: url(<%= news.image %>);" >
            <div class="news-date-block">
              <p class="news-date-day"><%= news.news_day %></p>
              <p class="news-date-month"><%= news.news_month %></p>
            </div>
          </div>
        </a>

        <div class="news-content">
          <p><%= news.short %></p>
        </div>

      </div>
      <% end %>
      <div class="google-ads-news-main">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- mv-news-main -->
        <ins class="adsbygoogle"
             style="display:inline-block;width:728px;height:90px"
             data-ad-client="ca-pub-3562964519569523"
             data-ad-slot="1356928495"></ins>
        <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </div>
    </div>

    <div class="casting-next-back-btns">
      <%= will_paginate @news, previous_label: "Назад", next_label: "Вперед" %>
    </div>

    <h3 class="social-call">Мы в социальных сетях</h3>
    <div class="social-footer">
      <ul>
        <li><a href="https://vk.com/mvivenet"><i class="fa fa-vk"></i></a></li>
        <li><a href="https://www.facebook.com/mvivenet"><i class="fa fa-facebook"></i></a></li>
      </ul>
    </div>
  </div>
  </div>
</div>
<%= render 'shared/footer' %>