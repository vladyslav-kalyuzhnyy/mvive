<% content_for(:title, "Чоловіча мода 2017-2018")%>
<% content_for(:description, "Новинки та тенденції чоловічої моди. Актуальні та модні чоловічі тренди.") %>
<% content_for(:keywords, "мода, чоловіча мода, тренди, тенденції")%>


<div class="global-scope">
  <div class="settings-scope" style="padding-top: 0;">
    <div class="up-logo-main">
      <%= image_tag "mvive-tv-white-small.png", alt: "MVive Fashion Channel", class: "up-logo" %>
    </div>
    <%= render "shared/main_news_navbar" %>
    <%= render "shared/news_slider_navbar" %>
    <h2 style="padding-top: 60px;">Останні оновлення</h2>
    <div class="news-feed">

      <% @moda.each do |men_fashion| %>
          <div class="news-container">

            <h1><a href="<%= men_fashion_path(men_fashion) %>"><span class="headline-word"><%= men_fashion.name %></span></a></h1>

            <a href="<%= men_fashion_path(men_fashion) %>" target="_self">
              <div class="news-photo" style="background-image: url(<%= men_fashion.image %>);" >
                <div class="news-date-block">
                  <p class="news-date-day"><%= men_fashion.news_day %></p>
                  <p class="news-date-month"><%= men_fashion.news_month %></p>
                </div>
              </div>
            </a>

            <div class="news-content">
              <p><%= men_fashion.short %></p>
            </div>

          </div>
      <% end %>
      <div class="google-ads-news-main">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- mv-news-main -->
        <ins class="adsbygoogle"
             style="display:inline-block;width:728px;height:90px"
             data-ad-client="ca-pub-3562964519569523"
             data-ad-slot="1356928495"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </div>
    </div>

    <div class="casting-next-back-btns">
      <%= will_paginate @men_fashion, previous_label: "Назад", next_label: "Вперед" %>
    </div>
  </div>
</div>
</div>
