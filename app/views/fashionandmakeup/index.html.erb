<% content_for(:title, "Новости моды 2016-2017 | Мода")%>
<% content_for(:description, "Только актуальные новости в мире высокой моды: тренды, выходы новых коллекций, интересные факты из жизни модельеров и другое !") %>
<% content_for(:keywords, "новости моды, мода, тренды, коллекции")%>

<%= render "shared/menu" %>
<div class="global-scope">
  <div class="settings-scope" style="padding-top: 0;">
    <%= render "shared/main_news_navbar" %>
    <h2 style="padding-top: 60px;">Раздел Fashion & MakeUp в разработке</h2>
    <div class="news-feed">

      <% @fashionandmakeup.each do |fashionandmakeup| %>
          <div class="news-container">

            <h1><span class="headline-word"><%= fashionandmakeup.name %></span></h1>



            <a href=" <%= fashionandmakeup_path(fashionandmakeup) %>" target="_self">
              <div class="news-photo" style="background-image: url(<%= fashionandmakeup.image %>);" >
                <div class="news-date-block">
                  <p class="news-date-day"><%= fashionandmakeup.address %></p>
                  <p class="news-date-month"><%= fashionandmakeup.phone %></p>
                </div>
              </div>
            </a>

            <div class="news-content">
              <p><%= fashionandmakeup.short %></p>
            </div>

          </div>
      <% end %>
    </div>

    <div class="casting-next-back-btns">
      <%= will_paginate @fashionandmakeup, previous_label: "Назад", next_label: "Вперед" %>
    </div>

    <h3 class="social-call">Мы в социальных сетях</h3>
    <div class="social-footer">
      <ul>
        <li><a href="https://vk.com/mvivenet"><i class="fa fa-vk"></i></a></li>
        <li><a href="https://www.facebook.com/mvivenet"><i class="fa fa-facebook"></i></a></li>
        <li><a href="https://www.instagram.com/mvivenet/"><i class="fa fa-instagram"></i></a></li>
      </ul>
    </div>
  </div>
</div>
</div>
<%= render 'shared/footer' %>