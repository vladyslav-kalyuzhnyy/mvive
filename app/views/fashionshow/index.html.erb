<% content_for(:title, "Показы моды/Fashion Shows | Мода")%>
<% content_for(:description, "Список последних показов Украины и со всего мира моды 2016/17.") %>
<% content_for(:keywords, "новости моды, мода, показы, fashio show")%>

<%= render "shared/menu" %>
<div class="global-scope">
  <div class="settings-scope" style="padding-top: 0;">
    <%= render "shared/main_news_navbar" %>
    <h2 style="padding-top: 60px;">Показы</h2>
    <div class="google-ads-news-main">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- mv-news-main -->
      <ins class="adsbygoogle"
           style="display:inline-block;width:728px;height:90px"
           data-ad-client="ca-pub-3562964519569523"
           data-ad-slot="1356928495"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
    <div class="news-feed">

      <% @fashionshow.each do |fashionshow| %>
          <div class="news-container">

            <h1><span class="headline-word"><%= fashionshow.name %></span></h1>



            <a href=" <%= fashionshow_path(fashionshow) %>" target="_self">
              <div class="news-photo" style="background-image: url(<%= fashionshow.image %>);" >
                <div class="news-date-block">
                  <p class="news-date-day"><%= fashionshow.news_day %></p>
                  <p class="news-date-month"><%= fashionshow.news_month %></p>
                </div>
              </div>
            </a>

            <div class="news-content">
              <p><%= fashionshow.short %></p>
            </div>

          </div>
      <% end %>
    </div>

    <div class="casting-next-back-btns">
      <%= will_paginate @fashionshow, previous_label: "Назад", next_label: "Вперед" %>
    </div>

    <div class="google-ads-news-main">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- mv-news-main -->
      <ins class="adsbygoogle"
           style="display:inline-block;width:728px;height:90px"
           data-ad-client="ca-pub-3562964519569523"
           data-ad-slot="1356928495"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>

    <h3 class="social-call">Мы в социальных сетях</h3>
    <div class="social-footer">
      <ul>
        <li><a href="https://vk.com/mvivenet"><i class="fa fa-vk"></i></a></li>
        <li><a href="https://www.facebook.com/mvivenet"><i class="fa fa-facebook"></i></a></li>
        <li><a href="https://www.instagram.com/mvivenet/"><i class="fa fa-instagram"></i></a></li>
      </ul>
    </div>
  </div>
</div>
</div>
<%= render 'shared/footer' %>