<script type="text/javascript">
  $(function() {

    var jmpressOpts	= {
      animation		: { transitionDuration : '0.8s' }
    };

    $( '#jms-slideshow' ).jmslideshow( $.extend( true, { jmpressOpts : jmpressOpts }, {
      autoplay	: true,
      bgColorSpeed: '0.8s',
      arrows		: false
    }));

  });
</script>
