<% unless current_user.nil? || current_user == @user %>
  <% if current_user.following?(@user) %>
    <%= form_for(current_user.relationships.find_by(followed_id: @user), html: { method: :delete }) do |f| %>
  		<%= f.submit "Отписаться", class: "button-subscribe-on-profile" %>
	<% end %>
  <% else %>
    <%= form_for(current_user.relationships.build(followed_id: @user.id)) do |f| %>
  		<div><%= f.hidden_field :followed_id %></div>
  		<%= f.submit "Подписаться", class: "button-subscribe-on-profile" %>
	<% end %>
  <% end %>
<% end %>
